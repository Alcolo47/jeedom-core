# Right on file

Order Allow,Deny

# Allow all :

<FilesMatch ".*\.(css|js|jpeg|jpg|png|php|html|svg|woff|woff2|ttf|m3u8|ts|ico)$">
    Order Allow,Deny
    Allow from all
</FilesMatch>

<FilesMatch "^$">
    Order Allow,Deny
    Allow from all
</FilesMatch>

# Deny some php file
<Files sick.php>
    Order Allow,Deny
    Deny from all
</Files>

<FilesMatch ".*\.(class|com|config|sample)\.(php)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

